<table class="table">
<tr>
	<th>이름</th>
	<th>현재 역할</th>
	<th>역할 바꾸기</th>
	<th>상태</th>
	<th>상태 변경</th>
</tr>
<% Mapium.all.each do |mapium| %>
	<tr>
		<% user = mapium.user %>
		<td><%= user.name %></td>
		<td><%= mapium.role %></td>
		<td>역할 옵션 칸</td>
		<td><%= mapium.status %></td>
		<td>
			<%= link_to "/welcome/#{user.id}/change" do %>
				<button class="btn btn-default">
					<% if mapium.status == "dead" %>
						<%= user.name %>님을 살리시겠습니까?
					<% elsif mapium.status == "alive" %>
						<%= user.name %>님을 죽이시겠습니까?
					<% end %>
				</button>
			<% end %>
		</td>
	</tr>
<% end %>
